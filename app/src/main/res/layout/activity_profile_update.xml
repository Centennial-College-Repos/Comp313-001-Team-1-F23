<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title for the profile -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Information"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- View-only field for existing medical information -->
    <TextView
        android:id="@+id/existingMedicalInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Editable field for medical information -->
    <EditText
        android:id="@+id/medicalInfoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter or Modify Medical Information"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:layout_marginBottom="16dp" />

    <!-- Save button to save changes -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginBottom="16dp" />

    <!-- Delete button to delete information -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete" />

</LinearLayout>
