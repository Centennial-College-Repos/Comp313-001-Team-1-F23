<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".views.ProtocolActivity">

    <Spinner
        android:id="@+id/conditionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/medical_conditions"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/viewGuidelinesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Guidelines" />

    <TextView
        android:id="@+id/guidelinesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text=""
        android:textSize="16sp" />
</LinearLayout>
