        <activity android:name=".views.emt.EmtEmergencyRequestActivity" />
        <activity android:name=".views.emt.EmtEmergencyRequestDetailActivity" />
        <activity android:name=".views.emt.EmtEmergencyRequestTransferActivity" />
        <activity android:name=".views.emt.EmtLoginActivity" />
        <activity android:name=".views.emt.EmtProfileActivity" />
        <activity android:name=".views.emt.EmtRegistrationActivity" />
        <activity android:name=".views.emt.MedicalEducationActivity" />
        <activity android:name=".views.emt.MedicalGuidelinesActivity" />
        <activity android:name=".views.emt.PatientDetailActivity" />
        <activity android:name=".views.emt.ViewPatientsActivity" />

        <activity android:name=".views.ResetPasswordActivity" />
        <activity android:name=".views.ForgetPasswordActivity" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".views.TeamMembersActivity" />
        <activity android:name=".views.AboutUsActivity" />
        <activity android:name=".views.FirstAidView" />
        <activity android:name=".views.HomePageActivity" />
